package soot.jimple.paddle.queue;
import soot.util.*;
import soot.jimple.paddle.bdddomains.*;
import soot.jimple.paddle.*;
import soot.jimple.toolkits.callgraph.*;
import soot.*;
import soot.util.queue.*;
import jedd.*;
import java.util.*;

public final class Rvar_method_typeBDD extends Rvar_method_type {
    private <var:V1, method:T1, type:T2> bdd;
    void add( <var:V1, method:T1, type:T2> tuple ) { bdd |= tuple; }
    public Rvar_method_typeBDD( <var:V1, method:T1, type:T2> bdd, String name ) { this(name); add(bdd); }
    Rvar_method_typeBDD(String name) { super(name); bdd = 0B; }
    public Iterator iterator() {;
        return new Iterator() {
            private Iterator it;
            public boolean hasNext() {
                if( it != null && it.hasNext() ) return true;
                if( bdd != 0B ) return true;
                return false;
            }
            public Object next() {
                if( it == null || !it.hasNext() ) {
                    it = bdd.iterator( new Attribute[] { var.v(), method.v(), type.v() } );
                    bdd = 0B;
                }
                Object[] components = (Object[]) it.next();
                return new Tuple( (VarNode) components[0], (SootMethod) components[1], (Type) components[2] );
            }
            public void remove() { throw new UnsupportedOperationException(); }
        };
    }
    public <var:V1, method:T1, type:T2> get() {
        <var:V1, method:T1, type:T2> ret = bdd;
        bdd = 0B;
        return ret;
    }
    public boolean hasNext() { return bdd != 0B; }
}
